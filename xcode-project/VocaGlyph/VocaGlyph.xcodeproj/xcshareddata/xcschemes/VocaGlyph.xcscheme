            <ActionContent
               title = "Re-sign App + Sparkle Helpers (xcent)"
               scriptText = "#!/bin/sh&#10;set -e&#10;&#10;# Post-archive re-signing script.&#10;# Workaround for Xcode 26 beta bug where the archive binary gets re-signed&#10;# with Developer ID Application, stripping entitlements.&#10;#&#10;# Mirrors the manual fix that was confirmed to work:&#10;#   codesign --force --sign &quot;Apple Distribution: ...&quot; \&#10;#     --options runtime --entitlements &quot;$XCENT&quot; --timestamp &quot;$APP&quot;&#10;&#10;APP=&quot;${ARCHIVE_PATH}/Products/Applications/VocaGlyph.app&quot;&#10;APP_BINARY=&quot;${APP}/Contents/MacOS/VocaGlyph&quot;&#10;&#10;# Use the compiled .xcent from DerivedData &#x2014; this is the full set of&#10;# generated entitlements (sandbox + network + audio + file access),&#10;# exactly what the manual fix used. OBJROOT is set by Xcode in post-archive.&#10;XCENT=&quot;${OBJROOT}/ArchiveIntermediates/VocaGlyph/IntermediateBuildFilesPath/VocaGlyph.build/Release/VocaGlyph.build/VocaGlyph.app.xcent&quot;&#10;&#10;# Fallback to source entitlements if xcent not found&#10;if [ ! -f &quot;${XCENT}&quot; ]; then&#10;  echo &quot;warning: .xcent not found at ${XCENT}, falling back to source entitlements&quot;&#10;  XCENT=&quot;${SRCROOT}/VocaGlyph/VocaGlyph.entitlements&quot;&#10;fi&#10;&#10;if [ ! -f &quot;${XCENT}&quot; ]; then&#10;  echo &quot;error: No entitlements file found. Searched:&quot;&#10;  echo &quot;  ${OBJROOT}/ArchiveIntermediates/VocaGlyph/.../VocaGlyph.app.xcent&quot;&#10;  echo &quot;  ${SRCROOT}/VocaGlyph/VocaGlyph.entitlements&quot;&#10;  exit 1&#10;fi&#10;&#10;echo &quot;Using entitlements: ${XCENT}&quot;&#10;&#10;# Resolve Apple Distribution cert SHA-1 from Keychain.&#10;SIGN_ID=$(security find-identity -v -p codesigning 2&gt;/dev/null | awk &apos;/Apple Distribution/{print $2; exit}&apos;)&#10;if [ -z &quot;${SIGN_ID}&quot; ]; then&#10;  SIGN_ID=$(security find-identity -v -p codesigning 2&gt;/dev/null | awk &apos;/3rd Party Mac Developer Application/{print $2; exit}&apos;)&#10;fi&#10;if [ -z &quot;${SIGN_ID}&quot; ]; then&#10;  echo &quot;error: No Apple Distribution certificate found in Keychain.&quot;&#10;  exit 1&#10;fi&#10;echo &quot;Signing identity: ${SIGN_ID}&quot;&#10;&#10;# &#x2500;&#x2500; Sparkle helpers &#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#x2500;&#10;SPARKLE_FW=&quot;${APP}/Contents/Frameworks/Sparkle.framework/Versions/B&quot;&#10;if [ -d &quot;${SPARKLE_FW}&quot; ]; then&#10;  SANDBOX_ENT=$(mktemp /tmp/sparkle-sandbox.XXXXXX.plist)&#10;  cat &gt; &quot;${SANDBOX_ENT}&quot; &lt;&lt; &apos;ENTEOF&apos;&#10;&lt;?xml version=&quot;1.0&quot; encoding=&quot;UTF-8&quot;?&gt;&#10;&lt;!DOCTYPE plist PUBLIC &quot;-//Apple//DTD PLIST 1.0//EN&quot; &quot;https://www.apple.com/DTDs/PropertyList-1.0.dtd&quot;&gt;&#10;&lt;plist version=&quot;1.0&quot;&gt;&#10;&lt;dict&gt;&#10;  &lt;key&gt;com.apple.security.app-sandbox&lt;/key&gt;&lt;true/&gt;&#10;&lt;/dict&gt;&#10;&lt;/plist&gt;&#10;ENTEOF&#10;&#10;  DOWNLOADER_ENT=$(mktemp /tmp/sparkle-downloader.XXXXXX.plist)&#10;  cat &gt; &quot;${DOWNLOADER_ENT}&quot; &lt;&lt; &apos;ENTEOF&apos;&#10;&lt;?xml version=&quot;1.0&quot; encoding=&quot;UTF-8&quot;?&gt;&#10;&lt;!DOCTYPE plist PUBLIC &quot;-//Apple//DTD PLIST 1.0//EN&quot; &quot;https://www.apple.com/DTDs/PropertyList-1.0.dtd&quot;&gt;&#10;&lt;plist version=&quot;1.0&quot;&gt;&#10;&lt;dict&gt;&#10;  &lt;key&gt;com.apple.security.app-sandbox&lt;/key&gt;&lt;true/&gt;&#10;  &lt;key&gt;com.apple.security.network.client&lt;/key&gt;&lt;true/&gt;&#10;&lt;/dict&gt;&#10;&lt;/plist&gt;&#10;ENTEOF&#10;&#10;  sign_helper() {&#10;    local binary=&quot;$1&quot; ent=&quot;$2&quot;&#10;    if [ -e &quot;${binary}&quot; ]; then&#10;      codesign --force --sign &quot;${SIGN_ID}&quot; --options runtime --entitlements &quot;${ent}&quot; --timestamp &quot;${binary}&quot;&#10;      echo &quot;Re-signed: ${binary}&quot;&#10;    else&#10;      echo &quot;Skipped (not found): ${binary}&quot;&#10;    fi&#10;  }&#10;&#10;  sign_helper &quot;${SPARKLE_FW}/Autoupdate&quot;                       &quot;${SANDBOX_ENT}&quot;&#10;  sign_helper &quot;${SPARKLE_FW}/Updater.app&quot;                      &quot;${SANDBOX_ENT}&quot;&#10;  sign_helper &quot;${SPARKLE_FW}/XPCServices/Downloader.xpc&quot;       &quot;${DOWNLOADER_ENT}&quot;&#10;  sign_helper &quot;${SPARKLE_FW}/XPCServices/Installer.xpc&quot;        &quot;${SANDBOX_ENT}&quot;&#10;&#10;  rm -f &quot;${SANDBOX_ENT}&quot; &quot;${DOWNLOADER_ENT}&quot;&#10;&#10;  codesign --force --sign &quot;${SIGN_ID}&quot; --options runtime --timestamp &quot;${SPARKLE_FW}/../..&quot;&#10;  echo &quot;Re-signed: Sparkle.framework&quot;&#10;else&#10;  echo &quot;Sparkle.framework not found &#x2014; skipping&quot;&#10;fi&#10;&#10;# &#x2500;&#x2500; Main app: sign inner binary directly (mirrors manual fix), then re-seal &#x2500;&#x2500;&#10;echo &quot;Re-signing main binary with xcent...&quot;&#10;codesign --force --sign &quot;${SIGN_ID}&quot; --options runtime \&#10;  --entitlements &quot;${XCENT}&quot; \&#10;  --timestamp \&#10;  &quot;${APP_BINARY}&quot;&#10;echo &quot;Re-signed binary: ${APP_BINARY}&quot;&#10;&#10;echo &quot;Re-sealing app bundle...&quot;&#10;codesign --force --sign &quot;${SIGN_ID}&quot; --options runtime \&#10;  --entitlements &quot;${XCENT}&quot; \&#10;  --timestamp \&#10;  &quot;${APP}&quot;&#10;echo &quot;Re-sealed bundle: ${APP}&quot;&#10;&#10;echo &quot;Verifying entitlements on signed binary:&quot;&#10;codesign -d --entitlements :- &quot;${APP_BINARY}&quot; 2&gt;/dev/null || true&#10;&#10;echo &quot;&#x2705; Post-archive re-signing complete.&quot;&#10;">
