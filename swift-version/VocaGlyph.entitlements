<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Required for Mac App Store & sandbox -->
	<key>com.apple.security.app-sandbox</key>
	<true/>

	<!-- Microphone access — for voice recording -->
	<key>com.apple.security.device.audio-input</key>
	<true/>
	<key>com.apple.security.device.microphone</key>
	<true/>

	<!-- Network client — for downloading Whisper models from Hugging Face -->
	<key>com.apple.security.network.client</key>
	<true/>

	<!-- Temporary exception: allow CGEvent tap for hotkeys and paste.
	     Accessibility permission (granted by user via System Settings) enables this. -->
	<key>com.apple.security.temporary-exception.mach-lookup.global-name</key>
	<array>
		<string>com.vocaglyph.app-spks</string>
		<string>com.vocaglyph.app-spki</string>
	</array>
</dict>
</plist>
