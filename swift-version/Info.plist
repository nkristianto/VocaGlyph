<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleIconFile</key>
	<string>AppIcon</string>
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.productivity</string>
	<key>NSAccessibilityUsageDescription</key>
	<string>VocaGlyph uses Accessibility to detect your global hotkey and paste transcribed text into your active app.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>VocaGlyph uses the microphone to transcribe your speech into text.</string>
	<key>NSSupportsAutomaticTermination</key>
	<false/>

	<!-- ── Sparkle auto-update ─────────────────────────────────────────── -->
	<!-- URL of the appcast feed hosted on GitHub. Update this once you    -->
	<!-- have a public repo and have committed appcast.xml.                -->
	<key>SUFeedURL</key>
	<string>http://localhost:8080/appcast.xml</string>

	<!-- Local testing: allow plain HTTP to localhost. REMOVE before release. -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsLocalNetworking</key>
		<true/>
	</dict>

	<!-- EdDSA public key generated by Sparkle's generate_keys tool.       -->
	<!-- Run generate_keys once, copy the public key here, keep the        -->
	<!-- private key safe in your Keychain (never commit it).              -->
	<key>SUPublicEDKey</key>
	<string>IV14VK/ypI5hw6aban9lMCTsAVr7Z7iOM7j7X47W+XA=</string>

	<!-- Required by Sparkle 2 to install updates securely via XPC.       -->
	<key>SUEnableInstallerLauncherService</key>
	<true/>
	<key>SUEnableDownloaderService</key>
	<true/>
</dict>
</plist>
